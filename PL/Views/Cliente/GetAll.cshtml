
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.1/js/dataTables.material.min.js"></script>
<script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>
<script type="text/javascript" src="~/Js/Cliente.js"></script>

<h2>GetAll</h2>

<div class="container">
    <div class="row">
        <div class="col-md-10">

        </div>
        <div class="col-md-1" style="padding-left:100px">
            <button type="button" class="btn btn-success" id="btnAdd" onclick="Modal()">Agregar</button>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-md-12">
            <table id="tblCliente" class="table table-hover" border="1">
                <thead>
                    <tr>
                        <th style="display:none">IdCliente</th>
                        <th>Nombre</th>
                        <th>Apellido Paterno</th>
                        <th>Apellido Materno</th>
                        <th>Fecha modificacion </th>
                        <th>Nombre del plan</th>
                        @*<th>Fecha modificacion </th>*@
                        <th>Nombre de la cobertura</th>
                        @*<th>Fecha modificacion </th>*@

                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal fade" id="ModalUpdate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content col-md-9">

            @*Header*@
            <div class="modal-header ">
                <h4 class="modal-title" id="myModalLabel">Informacion del cliente</h4>
                <button type="button" class="close" data-dismiss="modal" onclick="ModalCerrar()">x</button> @*Creacion de boton de cerrar*@
            </div>

            @*Body*@
            <div class="modal-body">
                <form>

                    @*IdEmpleado*@
                    <div class="form-group" style="display:none">
                        <label>Id Cliente</label>
                        <input type="text" class="form-control" id="txtIdEmpleado" placeholder="Id Cliente" disabled="disabled" />
                    </div>

                    @*Nombre*@
                    <div class="form-group">
                        <label>Nombre Cliente</label>
                        <input type="text" class="form-control" id="txtNombreEmpleado" placeholder="Nombre Empelado" />
                    </div>

                    @*Apellido Paterno*@
                    <div class="form-group">
                        <label>Apellido Paterno</label>
                        <input type="text" class="form-control" id="txtApellidoPaterno" placeholder="Apellido Paterno" />
                    </div>

                    @*Apellido Paterno*@
                    <div class="form-group">
                        <label>Apellido Materno</label>
                        <input type="text" class="form-control" id="txtApellidoMaterno" placeholder="Apellido Materno" />
                    </div>


                    <div class="form-group" >
                        <label>Edad</label>
                        <input type="text" class="form-control" id="txtEdad" placeholder="Edad" />
                    </div>


                    <div class="form-group" style="display:none">
                        <label>IdPlan</label>
                        <input type="text" class="form-control" id="txtIdPlan" placeholder="" />
                    </div>

                    <div class="form-group">
                        <label>Nombre Plan</label>
                        <select name="estado" class="form-control" id="ddlNombrePlan"></select>

                    </div>

                    <div class="form-group" style="display:none">
                        <label>IdCobertura</label>
                        <input type="text" class="form-control" id="txtIdCobertura" placeholder="" />
                    </div>

                    <div class="form-group">
                        <label>Nombre Cobertura</label>
                        <select name="estado" class="form-control" id="ddlNombreCobertura"></select>
                    </div>

                </form>
            </div>

            @*Footer*@
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnUpdate" onclick="Aceptar()">Aceptar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="ModalCerrar()">Cancelar</button>
            </div>

        </div>
    </div>
</div>
